description="XML to PO template files and back"
url="http://itstool.org/"

packager="tnut <tnut@nutyx.org>"
contributors="Pierre B, Tnut, Schrodinger72"

makedepends=(autoconf automake libtool sed
             docbook-xml docbook-xsl libxml2 python)

name=itstool
version=2.0.6
release=5

source=(http://files.itstool.org/itstool/$name-$version.tar.bz2)

build() {
  cd $name-$version
  PYTHON=/usr/bin/python3 ./configure --prefix=/usr
  make
  make DESTDIR=$PKG install
}
