makedepends=(opencolorio libraw qtmultimedia quazip poppler-qt eigen3 extra-cmake-modules hicolor-icon-theme kdelibs4support libksane kitemmodels python-qt vc libkexiv2)

description="Painting Application"
url="https://www.kde.org/"

packager="spiky <spiky@nutyx.org>"
contributors="Tnut, rems"

name=krita
version=4.4.3

source=(https://invent.kde.org/graphics/krita/-/archive/v$version/krita-v$version.tar.gz)

prepare() {

cd krita-v$version

sed -e "/CMAKE_CXX_STANDARD/s/11/14/" -i CMakeLists.txt
}

build() {

mkdir -p build && cd build

cmake ../$name-v$version \
      -DBUILD_TESTING=OFF \
      -DBUILD_KRITA_QT_DESIGNER_PLUGINS=ON

cmake --build .
DESTDIR="$PKG" cmake --install .
}
