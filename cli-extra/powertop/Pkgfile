description="an intel provided tool that enhances powersaving"
url="https://bellard.org/tcc/tcc-doc.html#Invoke"

packager="spiky <spiky@nutyx.org>"
contributors="Cbarth, Tnut"

makedepends=(libnl ncurses pciutils)

name=powertop

version=2.13

source=(https://01.org/sites/default/files/downloads//powertop-2.13.tar.gz)

build() {

	cd $name-$version
	./configure --prefix=/usr \
		--disable-static
	make
	make DESTDIR=$PKG install

}
